.itemTitle
{
  width: 130px;
  height: 50px;
  font-size: xx-large;
  color: yellowgreen;
  background-color: brown;
  border: 1px solid red;
}

.imageStyle
{
  text-align: center; /* 确保图片容器内容居中 */
  border: 1px solid red;
  height: 200px;
}

.goods-image
{
  width: 100%;
  height: 100%;
}

.goods-price
{
  padding: 10px;
  width: 200px;
  background-color: yellow;
  color: #ff5722;
  font-size: 18px;
  margin-bottom: 10px;
}

.goods-title
{
  font-weight: 700;
  font-size: x-large;
}