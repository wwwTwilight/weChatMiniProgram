/* pages/list/list.wxss */

#content {
  background:linear-gradient(-45deg, #e6f3ff, #b3d9ff, #bbe7f5, #a5e9d9);
  min-height: 100%;
  width: 100%; /* 确保至少覆盖整个视口高度 */
  position: relative; /* 确保内容可以相对定位 */
  padding-bottom: 100px;
}

.imageStyle
{
  text-align: center; /* 确保图片容器内容居中 */
  width : 97%;
  height: 300px;
  border: 2px solid black; 
  box-shadow: 4px 4px black; 
  margin-bottom: 10px; 
  gap: 20px;
  border-radius: 5px;
}

.goods-image
{
  width: 100%;
  height: 100%;
}

.goods-price
{
  padding: 10px;
  width: 200px;
  color: black;
  font-size: 18px;
  padding: 10px; 
  border: 2px solid black; 
  box-shadow: 4px 4px black; 
  margin-bottom: 10px; 
  gap: 20px;
  border-radius: 5px;
}

.goods-title
{
  font-weight: 700;
  font-size: xx-large;
  margin : 10px;
}

.sellerInfo
{
  display: flex;
  width: 97%;
  flex-direction: column;
  border: 2px solid black; 
  box-shadow: 4px 4px black; 
  margin-bottom: 30px; 
  gap: 20px;
  border-radius: 5px;
}

.sellerInfo text
{
  margin: 10px;
  font-size: 22px;
  color: black;
  font-weight: 700;
}

.perchaseButton
{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10rem;
  height: 5rem;
  background-size: 300% 300%;
  backdrop-filter: blur(1rem);
  border-radius: 5rem;
  border: 2px;
  background-image:
    linear-gradient(
      137.48deg,
      #ffdb3b 10%,
      #fe53bb 45%,
      #8f51ea 67%,
      #0044ff 87%
    );
}