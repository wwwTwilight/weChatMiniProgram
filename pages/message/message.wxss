.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}

.header {
  background: lightblue;
  padding: 10px 15px;
  color: white;
  margin-bottom: 10rpx;
  box-shadow: 1px 1px 0 rgba(0, 0, 0, 0.6), 
              2px 2px 0 rgba(0, 0, 0, 0.5),
              3px 3px 0 rgba(0, 0, 0, 0.4);
}

.header-top {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}

.header-title {
  font-size: 20px;
  font-weight: bold;
  text-shadow: 
    1px 1px 0 rgba(0, 0, 0, 0.6), 
    2px 2px 0 rgba(0, 0, 0, 0.5),
    3px 3px 0 rgba(0, 0, 0, 0.4);
}


.contact-list {
  flex: 1;
  overflow-y: auto;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;  
}

.contact-avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 15px;
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.contact-message {
  font-size: 14px;
  color: #888;
}

.unread-count {
  background-color: #ff4500;
  color: white;
  border-radius: 12px;
  padding: 2px 8px;
  font-size: 12px;
}