.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f1f1f1;
}

.header {
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  padding: 10px 15px;
  color: white;
}

.header-top {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}

.header-title {
  font-size: 18px;
  font-weight: bold;
}

.search-bar {
  display: flex;
  align-items: center;
  border-radius: 30px;
  background: rgb(255, 255, 255);
  box-shadow: rgba(45, 45, 61, 0.25) 0px 30px 50px -12px, rgba(0, 0, 0, 0.3) 0px 18px 26px -18px inset;
  border-radius: 20px;
  padding: 8px 10px;
}

.search-bar icon {
  margin-right: 5px;
}

.search-bar input {
  flex: 1;
  font-size: 14px;
}

.contact-list {
  flex: 1;
  overflow-y: auto;
}

.contact-item {
  margin: 2rpx;
  display: flex;
  align-items: center;
  padding: 15rpx;
  width: 95%;
  background-color: white;
  border-top-right-radius: 30px;
  border-bottom-right-radius: 30px;
  border: 2rpx solid #000000;

}

.contact-avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 15px;
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.contact-message {
  font-size: 14px;
  color: #888;
}

.unread-count {
  background-color: #ff4500;
  color: white;
  border-radius: 12px;
  padding: 2px 8px;
  font-size: 12px;
}