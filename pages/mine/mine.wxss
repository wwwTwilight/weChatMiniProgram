/* 我的页面 */
#mine {
  height: 100vh;
  width: 100%;
  background-color: #ffffff;
}

.header {
  width: 100%;
  height: 400rpx;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
  background: rgb(168, 136, 136);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;


}

.user {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.2);  
}

.name {
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3);  
}

.nav {
  width: 100%;
  display: flex;
  margin-top: 70rpx;
}

.nav_item {
  flex: 1;
  text-align: center;
  color: #ffffff;
  position: relative;
}

.nav_item:hover {
  color: #ffeb3b;  
}

.list {
  background-color: #ffffff;
  margin-top: 20rpx;
  border-radius: 10rpx;  
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);  
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;  
}

.list-item:hover {
  background-color: #f7f9fc; 
}

.list-item:last-child {
  border-bottom: none;
}

.list-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.list-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  transition: transform 0.3s;  
}

.list-item:hover .arrow {
  transform: translateX(5rpx);  
}

/* 添加物品交易模块 */
.float-button {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%); /* 添加这行使按钮水平居中 */
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  color: white;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.2);
}

.button-image{
  width: 60rpx;
  height: 60rpx;
}


.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-content {
  background-color: white;
  width: 80%;
  border-radius: 10rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close-button {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 20rpx;
}

.modal-body input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.modal-body button {
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  margin-bottom: 10rpx;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #e0e0e0;
}

.modal-footer button {
  width: 100%;
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  color: white;
}