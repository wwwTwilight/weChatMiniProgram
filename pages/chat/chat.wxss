.header{
  position: fixed;
  height: 100rpx;
  width: 100%;
  background-color: #007AFF;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.fixed-button {
  position: fixed; 
  top: 100rpx; 
  justify-content: center; 
  z-index: 1000;
}
.fixed-button:hover {
  background-color: #ccc;
  box-shadow: inset 2px 5px 10px rgba(0,0,0,0.3);
  /* box-shadow: 13px 13px 100px #969696,
              -13px -13px 100px #ffffff; */
  transition: 1ms ease-in-out;
  position: fixed; 
  top: 100rpx; 
  justify-content: center; 
  z-index: 1000;
}

.pub-comment {
  background-color: #f3f3f3;
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.pub-left {
  background-color: #fff;
  color: #7f7f7f;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.pub-input {
  padding: 10rpx 20rpx;
  width: 500rpx;
}

.pub-button {
  color: #7f7f7f;
  background-color: #76c4f5;
  border: solid 1rpx #7f7f7f;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.pub-button-with-text {
  color: #fff;
  background-color: #0099ff;
  border: solid 1rpx #7f7f7f;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.chat_content {
  margin-bottom: 120rpx;
  width: 100%;
  height: 100vh;
}

.test {
  height: 150rpx;
  background-color: #fff;
}

.top {
  display: flex;
  margin: 20rpx 20rpx 0 20rpx;
  align-items: center;
}

.top-right {
  display: flex;
  margin: 20rpx 20rpx 0rpx 20rpx;
  align-items: center;
  justify-content: flex-end;
}

.face {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 5rpx gray solid;
}

.face-right {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  right: 10rpx;
  flex-shrink: 0;
  border: 5rpx gray solid;
}

.bot {
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 20rpx 20rpx;
  background-color: rgb(229,229,229);
  border-radius: 20rpx;
}

.bot-right {
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 20rpx 20rpx;
  color: #fff;
  background-color: #0099ff;
  border-radius: 20rpx;
}

.nick {
  margin-top: 20rpx;
}

text {
  font-size: 30rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
}

.chat-container {
  flex: 1;
  margin-bottom: 20rpx;
}

.message {
  max-width: 80%;
  padding: 10rpx 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
}

.message-left {
  align-self: flex-start;
  background-color: #f0f0f0;
}

.message-right {
  align-self: flex-end;
  background-color: #007AFF;
  color: white;
}

.input-container {
  display: flex;
  margin-bottom: 20rpx;
}

.message-input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.send-button, .confirm-button {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 5rpx;
}

.modal, .success-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content, .success-modal-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 10rpx;
  text-align: center;
}

.modal-text, .success-modal-text {
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.modal-buttons {
  display: flex;
  justify-content: space-around;
}

.modal-button, .success-modal-button {
  padding: 10rpx 20rpx;
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 5rpx;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.order-status {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10px;
  text-align: center;
  transform: translateY(-100%);
  transition: transform 0.3s ease-in-out;
  z-index: 1000;
}

.order-status.visible {
  transform: translateY(0);
}
