<view id="myTrades">
  <view class="header">
    <view class="title">我的交易</view>
  </view>
  <view class="container">
    <view class="item-list">
      <block wx:for="{{items}}" wx:key="index">
        <view class="item" bindtap="confirmContactSeller" data-seller="{{item.sellerId}}">
          <image class="item-image" src="{{item.image}}" mode="aspectFill"></image>
          <view class="item-info">
            <view class="item-name-container">
              <text class="item-name">{{item.name || '未知物品'}}</text>
            </view>
            <text class="item-price">价格：{{item.price}}元</text>
            <text class="item-state" style="color: {{item.isSold ? 'green' : 'red'}}">
              交易状态：{{item.state}}
            </text>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>









