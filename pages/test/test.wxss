/* pages/test/test.wxss */
/* 容器样式 */
.container {
  padding: 10px;
}

.swiper {
  border : 3px solid yellow; 
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保证图片以合适的方式显示 */
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.search-input {
  flex-grow: 1;
  border: 1px solid #ddd;
  padding: 10px 100px 10px 10px;
  margin-right: 10px;
  border-radius: 5px;
}

.search-button {
  margin-left: 10px;
  padding: 10px 10px 10px 10px;
  background-color: #1aad19;
  color: white;
  border: red;
  border-radius: 5px;
}

/* 分类导航样式 */
.category-nav {
  margin-bottom: 20px;
  display: flex;
}

.nav-scroll {
  width: 300px;
  height: 40px;
  border: green 1px solid;
  display: flex; /* 使用flex布局来保证子项的横向排列 */
  white-space:nowrap;
}
/* 
要在上一级加上
display: flex;  使用flex布局来保证子项的横向排列 
white-space:nowrap;

下一级加上
display: inline-block;

才可以实现横向滚动
 */
.nav-item {
  padding: 1px;
  border: white 3px solid;
  background-color: #cecece;
  border-radius: 15px;
  margin-right: 10px;
  text-align: center;
  display: inline-block;
}

/* 商品列表样式 */
.goods-list {
  display: flex;
  flex-direction: column;
}

.goods-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.goods-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
}

.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.goods-price {
  color: #ff5722;
  font-size: 18px;
}
