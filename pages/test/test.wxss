/* pages/test/test.wxss */
/* 容器样式 */
.container {
  padding: 10px;
}

.swiper {
  border : 3px solid yellow; 

  width: 350px;
  height: 200px;
  margin-bottom: 20px;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  margin : 10px;
}

.search-bar button
{
  line-height: 30px;
}

.search-bar > .search-input {
  border: none;
  outline: none;
  width: 240px;
  border-radius: 15px;
  padding: 1em;
  background-color: #ccc;
  box-shadow: inset 2px 5px 10px rgba(0,0,0,0.3);
  /* box-shadow: 13px 13px 100px #969696,
              -13px -13px 100px #ffffff; */
  transition: 300ms ease-in-out;
}

.search-input {
  flex-grow: 1;
  border: 1px solid #ddd;
  padding: 10px 100px 10px 10px;
  margin-right: 10px;
  border-radius: 5px;
}

.search-button {
  margin-left: 10px;
  padding: 10px 10px 10px 10px;
  background-color: rgb(255, 224, 47);
  color: white;
  border: red;
  border-radius: 5px;
}

/* 分类导航样式 */
.category-nav {
  margin-bottom: 0px;
  display: flex;
}

.nav-scroll {
  width: 300px;
  height: 40px;
  border: rgb(255, 224, 47) 5px solid;
  display: flex; /* 使用flex布局来保证子项的横向排列 */
  white-space:nowrap;
}
/* 
要在上一级加上
display: flex;  使用flex布局来保证子项的横向排列 
white-space:nowrap;

下一级加上
display: inline-block;

才可以实现横向滚动
 */
.nav-item {
  padding: 1px;
  border: white 3px solid;
  background-color: #cecece;
  border-radius: 15px;
  margin-right: 10px;
  text-align: center;
  display: inline-block;
}

/* 商品列表样式 */
.goods-list {
  display: flex;
  flex-direction: column;
}

.goods-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.goods-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
}

.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.goods-price {
  color: #ff5722;
  font-size: 18px;
}
