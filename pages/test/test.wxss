/* pages/test/test.wxss */
#content {
  background: linear-gradient(to bottom, #e6f3ff, #b3d9ff);
  min-height: 100vh; /* 确保至少覆盖整个视口高度 */
  padding-top: 70px; /* 给搜索栏留出空间 */
  position: relative; /* 确保内容可以相对定位 */
}
.blossom {
  position: absolute;
  border-radius: 50%;
  background-color: rgba(255, 192, 203, 0.8);
  animation: fall linear infinite;
}

@keyframes fall {
  0% {
    top: -10rpx;
    transform: translateX(0) rotate(0deg);
    opacity: 0.8;
  }
  100% {
    top: 100vh;
    transform: translateX(100rpx) rotate(360deg);
    opacity: 0;
  }
}
.search-bar {
  top: 0;
  position: fixed; /* 固定在顶部 */
  width: 100%; /* 宽度占满 */
  display: flex;
  padding: 10px; /* 增加内边距 */
  z-index: 999; /* 确保在最上层 */
  background-color: #f3f3f3; /* 背景颜色确保可见 */
  align-items: center;
  justify-content: center;
}

.search-bar > .search-input {
  border: none;
  outline: none;
  width: 70%; /* 减少输入框宽度 */
  max-width: 350px; /* 设置最大宽度 */
  border-radius: 15px;
  padding: 10rpx; /* 减少内边距 */
  background-color: #ccc;
  box-shadow: inset 2px 5px 10px rgba(0, 0, 0, 0.3);
  transition: 300ms ease-in-out;

}
.search-icon{
  width: 40px; 
  height: 40px;
}
.search-button {
  padding: 10px 10px; /* 增加水平内边距 */
  color: white;
  border: none; 
  border-radius: 5px;
  display: flex; /* 让图标居中 */
  justify-content: center;
  align-items: center;
}

.search-button i {
  font-size: 20px; /* 图标大小 */
}

.container {
  position: relative;
  padding: 10px;
}

.swiper {
  width: 100%; 
  height: 200px;
  border-radius: 10%;
  margin-bottom: 20px;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 10%;
  object-fit: cover;
}

.showBox {
  display: flex;
  justify-content: center;
  position: relative;
}

/* 分类导航样式 */
.category-nav {
  margin-bottom: 0px;
  display: flex;
}

.nav-scroll {
  width: 300px;
  height: 40px;
  border: rgb(255, 224, 47) 5px solid;
  display: flex; /* 使用flex布局来保证子项的横向排列 */
  white-space: nowrap;
}

.nav-item {
  padding: 1px;
  border: white 3px solid;
  background-color: #cecece;
  border-radius: 15px;
  margin-right: 10px;
  text-align: center;
  display: inline-block;
}

/* 商品列表样式 */
.goods-list {
  display: flex;
  flex-direction: column;
}

.goods-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.goods-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
}

.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.goods-price {
  color: #ff5722;
  font-size: 18px;
}
