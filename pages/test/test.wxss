/* pages/test/test.wxss */
#content {
  background:linear-gradient(-45deg, #e6f3ff, #b3d9ff, #bbe7f5, #a5e9d9);
  min-height: 100%;
  width: 100%; /* 确保至少覆盖整个视口高度 */
  padding-top: 70px; /* 给搜索栏留出空间 */
  position: relative; /* 确保内容可以相对定位 */
}

.search-bar {
  top: 0;
  position: fixed; /* 固定在顶部 */
  width: 100%; /* 宽度占满 */
  display: flex;
  padding: 10px; /* 增加内边距 */
  z-index: 999; /* 确保在最上层 */
  background-color: #ffffff; /* 背景颜色确保可见 */
  align-items: center;
  justify-content: center;
}

.search-bar > .search-input {
  border: none;
  outline: none;
  width: 70%; /* 减少输入框宽度 */
  max-width: 800px; /* 设置最大宽度 */
  border-radius: 15px;
  padding: 10rpx; /* 减少内边距 */
  background-color:#ffffff;
  box-shadow: inset 2px 5px 10px rgba(0, 0, 0, 0.3);
  transition: 300ms ease-in-out;

}
.search-icon{
  width: 40px; 
  height: 40px;
}
.search-button {
  padding: 10px 10px; /* 增加水平内边距 */
  color: #ffffff;
  border: none; 
  border-radius: 5px;
  display: flex; /* 让图标居中 */
  justify-content: center;
  align-items: center;
}

.search-button i {
  font-size: 20px; /* 图标大小 */
}

.container {
  width: 100%;
  position: relative;
  padding: 10px;
}

.swiper {
  width: 100%; 
  height: 250px;
  border-radius: 10%;
  margin-bottom: 10px;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 10%;
  /* object-fit: cover; */
}

.showBox {
  display: flex;
  justify-content: center;
  position: relative;
}

/* 分类导航样式 */
.category-nav {
  display: flex;
}

.nav-scroll {
  width: 99%;
  height: 40px;
  border: rgb(153, 147, 112) 5px solid;
  border-radius: 20rpx;
  background-color: burlywood;
  display: flex;
  white-space: nowrap;
}

.nav-item {
  padding: 1px;
  border: white 3px solid;
  background-color: #cecece;
  border-radius: 15px;
  margin-right: 10px;
  text-align: center;
  display: inline-block;
}


.goods-list {
  display: flex;
  flex-direction: column; 
  justify-content: flex-start; 
  width: 100%;
  margin-top: 20rpx;

}

.goods-item {
  width: 94%;
  display: flex;
  padding: 10px; 
  border: 2px solid black; 
  box-shadow: 4px 4px black; 
  margin-bottom: 10px; 
  gap: 20px;
  border-radius: 5px;
}


.goods-image {
  width: 100px;
  height: 100px;
  margin-right: 10px;
  border: 2px solid black;
  box-shadow: 4px 4px black;
  gap: 20px;
  border-radius: 5px;
}

.goods-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.goods-price {
  color: #ff5722;
  font-size: 18px;
}
