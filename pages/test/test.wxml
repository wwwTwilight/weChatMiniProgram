<!--pages/test/test.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索二手商品" name = "title" bindinput = "onSearchInput" bindfocus="onSearchFocus" bindblur="onSearchBlur" style = "background-color : {{searchInputColor}}; box-shadow : {{searchInputShadow}} "></input>
    <button style="width: 60px; height: 50px; margin-top: 2px; " class="search-button" bind:tap = "onSearchTap" >搜索</button>
  </view>

  <!-- 轮播图 -->
<view class = "showBox" style="align-items: center; justify-content: center; ">
  <swiper class = "swiper" indicator-dots autoplay="{{true}}" interval="3000" duration="500">
    <block wx:for="{{showList}}" wx:key="id">
      <swiper-item>
        <image class="swiper-image" src="{{item.image}}"/>
      </swiper-item>
    </block>
  </swiper>
</view>

  <!-- 分类导航 -->
  <view class="category-nav">
    <text style="margin-top: 6px; font-size: x-large;">分类:</text>
    <scroll-view scroll-x class="nav-scroll">
      <button style = "width: auto; height: 40px; line-height: 35px;" class="nav-item" wx:for="{{categories}}" wx:key="id" bind:tap="onCategoryTap" data-category = "{{item}}">
        {{item}}
      </button>
    </scroll-view>
  </view>

  <!-- 商品列表 -->
  <view class="goods-list" style="width : 350px">
    <view class="goods-item" wx:for="{{goods}}" wx:key="id" bind:tap="toItemDetail" data-url = "{{item.url}}" data-image = "{{item.image}}" data-price = "{{item.price}}" data-title = "{{item.title}}">
      <image class="goods-image" src="{{item.image}}" />
      <view class="goods-info">
        <text class="goods-title">{{item.title}}</text>
        <text class="goods-price">{{item.price}}¥</text>
        <!-- <text class="goods-url">{{item.url}}</text> -->
      </view>
    </view>
  </view>
</view>
