<!--pages/test/test.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索二手商品" />
    <button style="width: 60px;" class="search-button">搜索</button>
  </view>

  <!-- 分类导航 -->
  <view class="category-nav">
    <text style="margin-top: 5px; font-size: x-large;">分类:</text>
    <scroll-view scroll-x class="nav-scroll">
      <button style = "width: auto; height: 40px; line-height: 35px;" class="nav-item" wx:for="{{categories}}" wx:key="id">
        {{item}}
      </button>
    </scroll-view>
  </view>

  <!-- 商品列表 -->
  <view class="goods-list">
    <view class="goods-item" wx:for="{{goods}}" wx:key="id">
      <image class="goods-image" src="{{item.image}}" />
      <view class="goods-info">
        <text class="goods-title">{{item.title}}</text>
        <text class="goods-price">¥{{item.price}}</text>
      </view>
    </view>
  </view>
</view>
