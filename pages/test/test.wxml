<!--pages/test/test.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索二手商品" name = "title" bindinput = "onSearchInput"></input>
    <button style="width: 60px;" class="search-button" bind:tap = "onSearchTap" >搜索</button>
  </view>

  <!-- 轮播图 -->
<view class = "showBox" style="width : 300px">
  <swiper class = "swiper" indicator-dots autoplay="{{true}}" interval="3000" duration="500">
    <block wx:for="{{showList}}" wx:key="id">
      <swiper-item>
        <image class="swiper-image" src="{{item.image}}" bind:tap = ""/>
      </swiper-item>
    </block>
  </swiper>
</view>

  <!-- 分类导航 -->
  <view class="category-nav">
    <text style="margin-top: 5px; font-size: x-large;">分类:</text>
    <scroll-view scroll-x class="nav-scroll">
      <button style = "width: auto; height: 40px; line-height: 35px;" class="nav-item" wx:for="{{categories}}" wx:key="id" bind:tap="onCategoryTap" data-category = "{{item}}">
        {{item}}
      </button>
    </scroll-view>
  </view>

  <!-- 商品列表 -->
  <view class="goods-list">
    <view class="goods-item" wx:for="{{goods}}" wx:key="id">
      <image class="goods-image" src="{{item.image}}" />
      <view class="goods-info">
        <text class="goods-title">{{item.title}}</text>
        <text class="goods-price">¥{{item.price}}</text>
      </view>
    </view>
  </view>
</view>
